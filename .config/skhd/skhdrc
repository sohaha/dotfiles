# Key: https://github.com/koekeishiya/skhd/issues/1

:: default : echo "进入默认模式"
:: dev_mode @ : echo "进入开发模式"

ralt - x ; dev_mode
dev_mode < escape ; default

dev_mode < cmd - return : open -a /Applications/Terminal.app > /dev/null 2>&1 ; default

# skhd --stop-service
# skhd --start-service
# skhd -r

cmd - n [
    "kitty"       : echo "hello kitty"
    *             : echo "hello everyone"
    "qutebrowser" : echo "hello qutebrowser"
    "terminal"    ~
    "finder"      : false
]

# ralt - [
ralt - 0x21 [
    "WezTerm": skhd -k "cmd - 0x21"
    "微信（测试版）": skhd -k "cmd - up"
    *: aerospace focus left --boundaries-action wrap-around-the-workspace
]

# ralt - ]
ralt - 0x1E [
    "WezTerm": skhd -k "cmd - 0x1E"
    "微信（测试版）": skhd -k "cmd - down"
    *: aerospace focus right --boundaries-action wrap-around-the-workspace
]
